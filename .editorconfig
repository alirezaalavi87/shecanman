root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.{yaml, yml}]
indent_size = 2

[*.json]
indent_size = 2

[*.{js,jsx,mjs,cjs,json,ts,tsx,mts,cts,vue,css,scss,sass,less,styl,yaml,yml}]
charset = utf-8
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
